= hidden_field_tag :author_name, @quote.author.blank? ? @quote.missing_author_wallpaper : @quote.author
= hidden_field_tag :quote_id, @quote.id

.background_cover
.row
  .col-md-10.col-xs-12
    .transparent_box
      / Header: title
      .row#quote_container_top
        .col-md-12.col-xs-12
          %h1#quote_title= "inspiration ##{@quote.id}"

      / Body: actual quote
      .row#quote_container_middle
        .col-md-12.col-xs-12
          %blockquote#quote_desc= @quote.description

      / Bottom: Author Name
      .row#quote_container_bottom
        .col-md-12.col-xs-12
          %p#quote_author= "~ #{@quote.author}" unless @quote.author.blank?

      / Bottom2: Likes
      .row#quote_container_last_bottom
        .col-md-12.col.xs-12
          %a.favIcon{href: "#"}
          %p.favIconNumber#quote_likes= @quote.likes.nil? ? 0 : @quote.likes
          = image_tag "viadreams_stamp_logo.png", class: "logo"
